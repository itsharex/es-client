{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "yarn build:tauri:windows",
        "beforeDevCommand": "yarn dev:tauri",
        "devPath": "http://localhost:5173",
        "distDir": "../dist"
    },
    "package": {
        "productName": "es-client",
        "version": "2.6.2"
    },
    "tauri": {
        "allowlist": {
            "http": {
                "all": true,
                "request": true,
                "scope": [
                    "http://**/*",
                    "https://**/*"
                ]
            },
            "shell": {
                "all": true,
                "open": true
            },
            "window": {
                "maximize": true,
                "unmaximize": true,
                "minimize": true,
                "close": true,
                "setTitle": true,
                "startDragging": true
            }
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/logo.png",
                "icons/favicon.ico"
            ],
            "identifier": "xyz.esion.es-client",
            "publisher": "esion",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": "",
                "webviewInstallMode": {
                    "type": "embedBootstrapper"
                },
                "wix": {
                    "license": "../LICENSE",
                    "language": "zh-CN"
                }
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "fullscreen": false,
                "height": 800,
                "resizable": true,
                "title": "es-client",
                "width": 1200,
                "minHeight": 600,
                "minWidth": 1000,
                "center": true,
                "decorations": false
            }
        ]
    }
}
