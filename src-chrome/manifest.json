{
    "manifest_version": 3,
    "name": "es-client",
    "version": "2.7.0",
    "description": "elasticsearch管理客户端",
    "content_security_policy": {
        "script-src": "self",
        "object-src": "self"
    },
    "action": {
        "default_title": "es-client",
        "default_icon": "icons/logo_200.png"
    },
    "background": {
        "service_worker": "main.js",
        "type": "module"
    },
    "permissions": [
        "tabs"
    ],
    "host_permissions": [
        "*://*/"
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "*://*/*"
            ],
            "resources": [
                "adapter.js"
            ]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "runtime.js"
            ]
        }
    ]
}