{
    "name": "es-client",
    "displayName": "es-client",
    "description": "elasticsearch客户端",
    "version": "2.6.0",
    "engines": {
        "vscode": "^1.46.0"
    },
    "author": {
        "name": "Esion",
        "email": "m17762618644@163.com",
        "url": "https://blog.esion.xyz"
    },
    "repository": {
        "type": "gitee",
        "directory": "/",
        "url": "https://gitee.com/qiaoshengda/es-client"
    },
    "license": "Apache-2.0",
    "categories": [
        "Other"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "es-client.command.open",
                "title": "打开es-client"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "es-client",
                    "title": "es-client",
                    "icon": "assets/logo.png"
                }
            ]
        },
        "views": {
            "es-client": [
                {
                    "id": "es-client-url",
                    "name": "链接",
                    "type": "tree",
                    "icon": "assets/logo.png"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "es-client-url",
                "contents": "没有找到链接，如果想了解更多，请查看 [语雀](https://www.yuque.com/baozhiyige-tewwf/ygxv4r)。\n[新增链接](command:es-client-url.add)"
            }
        ],
        "configuration": {
            "title": "es-client",
            "properties": {
                "es-client.setting.defaultPage": {
                    "type": "string",
                    "default": "home",
                    "description": "默认页面",
                    "enum": [
                        "home",
                        "data-browser",
                        "base-search",
                        "senior-search"
                    ],
                    "enumDescriptions": [
                        "概览",
                        "数据浏览",
                        "基础搜索",
                        "高级搜索"
                    ]
                },
                "es-client.setting.defaultShard": {
                    "type": "number",
                    "default": 5,
                    "description": "默认分片"
                },
                "es-client.setting.defaultReplica": {
                    "type": "number",
                    "default": 1,
                    "description": "默认副本"
                },
                "es-client.setting.timeout": {
                    "type": "number",
                    "default": 5000,
                    "description": "超时时间"
                },
                "es-client.setting.notificationTime": {
                    "type": "number",
                    "default": 5000,
                    "description": "通知关闭时间"
                },
                "es-client.setting.homeSearchState": {
                    "type": "number",
                    "default": 5000,
                    "description": "默认搜索状态",
                    "enum": [
                        1,
                        2,
                        3
                    ],
                    "enumDescriptions": [
                        "忽略",
                        "开启",
                        "关闭"
                    ]
                },
                "es-client.setting.showTab": {
                    "type": "boolean",
                    "default": false,
                    "description": "启用标签栏"
                },
                "es-client.setting.tabLoadMode": {
                    "type": "number",
                    "default": 1,
                    "description": "标签载入模式（未启用时有效）",
                    "enum": [
                        1,
                        2
                    ],
                    "enumDescriptions": [
                        "追加",
                        "覆盖"
                    ]
                },
                "es-client.setting.autoFullScreen": {
                    "type": "boolean",
                    "default": true,
                    "description": "选择链接后自动全屏"
                },
                "es-client.setting.lastUrl": {
                    "type": "boolean",
                    "default": false,
                    "description": "保存上次选择的连接（命令进入有效）"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.46.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "eslint": "^7.19.0",
        "glob": "^7.1.6",
        "prettier": "^2.2.1",
        "typescript": "^4.1.3",
        "vscode-test": "^1.5.0"
    }
}